var parser = JSONStream.parse(['rows', true])
  , req = request({url: 'http://pomelo3.server.163.org:8080/data.json'})
  , logger = es.mapSync(function (data) {
      console.log(data)
      return data
    });

req
  .pipe(parser)
  .pipe(logger);
