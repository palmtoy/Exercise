{
  "name": "bluedevicetools",
  "version": "1.0.0",
  "description": "bluedevicetools",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "build:mac": "electron-builder build --mac",
    "build:win": "electron-builder build --win --ia32",
    "build:wi": "cross-env NPM_CONFIG_ELECTRON_MIRROR=http://npm.taobao.org/mirrors/electron/ electron-builder build --win --ia32",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "palmtoy",
  "license": "ISC",
  "build": {
    "appId": "com.mt.bluedevicetools",
    "productName": "BlueDeviceTools",
    "files": [
      "src/**/*",
      "package.json",
      "!icons/**"
    ],
    "asar": true,
    "directories": {
      "buildResources": "resource",
      "output": "distribute"
    },
    "copyright": "Copyright Â© 2024 Palmtoy",
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.icns"
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "iconSize": 128
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        "squirrel",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "squirrelWindows": {
      "iconUrl": "https://raw.githubusercontent.com/palmtoy/Exercise/master/Nodejs/ElectronTest/PomodoroTechnique/resources/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^13.1.6",
    "electron-builder": "^23.0.3",
    "electron-builder-squirrel-windows": "^22.11.8"
  },
  "dependencies": {
    "about-window": "^1.14.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0"
  }
}
